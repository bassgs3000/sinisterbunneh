= form_for @lock do |f|
  - if @lock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@lock.errors.count, "error")} prohibited this lock from being saved:"
      %ul
        - @lock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :status
    = f.check_box :status
  .actions
    = f.submit 'Save'
